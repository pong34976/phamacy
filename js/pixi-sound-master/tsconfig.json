{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "removeComments": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "inlineSources": true,
        "typeRoots": [
          "node_modules/@types",
          "typings"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}